# -- clipboard -----------------------------------------------------------------

# in copy mode, copying selection also copies to the OS clipboard
#   - true
#   - false (default)
# on macOS, this requires installing reattach-to-user-namespace, see README.md
# on Linux, this requires xsel or xclip
tmux_conf_copy_to_os_clipboard=true


# -- user customizations -------------------------------------------------------

# mouse and vi mode
set -g mouse on

set -g status-keys vi
set -g mode-keys vi

# -- performance optimizations ------------------------------------------------
set -sg escape-time 0                     # faster escape response (better for vim)
set -g history-limit 50000                # increase scrollback buffer
set -g status-interval 30                 # reduce status bar refresh (default 10)

# move status line to top when in SSH session
if-shell 'test -n "$SSH_CLIENT"' 'set -g status-position top'

# nested tmux sessions toggle (C-M-a to disable/enable outer tmux)
bind -T root C-M-a  set prefix None \; set prefix2 None \; set key-table off \; refresh-client -S
bind -T off C-M-a set -u prefix \; set -u prefix2 \; set -u key-table \; refresh-client -S

# Clipper support for remote clipboard
unbind y
if -b 'command -v nc > /dev/null 2>&1' 'bind y run -b "\"\$TMUX_PROGRAM\" \${TMUX_SOCKET:+-S \"\$TMUX_SOCKET\"} save-buffer - | nc -c localhost 8377"'
if -b 'command -v socat > /dev/null 2>&1' 'bind y run -b "\"\$TMUX_PROGRAM\" \${TMUX_SOCKET:+-S \"\$TMUX_SOCKET\"} save-buffer - | socat - tcp:localhost:8377"'
